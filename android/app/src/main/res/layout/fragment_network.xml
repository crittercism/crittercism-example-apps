<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:fillViewport="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efeff4"
                android:layout_gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:focusable="false"
                android:text="CHOOSE CONNECTION TYPE:"/>



            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="HttpURLConnection"
                android:id="@+id/httpURLConnectionApi"
                android:checked="true"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center_vertical"
                android:checkMark="?android:attr/textCheckMark"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="Apache HttpClient"
                android:id="@+id/apacheHttpClientApi"
                android:checked="false"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center_vertical"
                android:checkMark="?android:attr/textCheckMark"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="OkHttp"
                android:id="@+id/okHttpApi"
                android:checked="false"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center_vertical"
                android:checkMark="?android:attr/textCheckMark"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efeff4"
                android:layout_gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:focusable="false"
                android:text="CHOOSE PROTOCOL:"/>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="HTTP"
                android:id="@+id/httpCheckBox"
                android:checked="true"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center_vertical"
                android:checkMark="?android:attr/textCheckMark"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="HTTPS"
                android:id="@+id/httpsCheckBox"
                android:checked="false"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center_vertical"
                android:checkMark="?android:attr/textCheckMark"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efeff4"
                android:layout_gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:focusable="false"
                android:text="PUNCH IT:"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GET 1b"
                    android:id="@+id/get1ByteButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GET 1kb"
                    android:id="@+id/get1KbButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GET 1mb"
                    android:id="@+id/get1MbButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POST 1b"
                    android:id="@+id/post1ByteButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POST 1KB"
                    android:id="@+id/post1KbButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POST 1MB"
                    android:id="@+id/post1MbButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latency 1s"
                    android:id="@+id/latency1SecondButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latency 3s"
                    android:id="@+id/latency3SecondButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latency 5s"
                    android:id="@+id/latency5SecondButton"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 Status"
                    android:id="@+id/status200Button"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="404 Status"
                    android:id="@+id/status404Button"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 STATUS"
                    android:id="@+id/status500Button"
                    android:textColor="#ff286cff"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efeff4"
                android:layout_gravity="start"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:focusable="false"
                android:text="RESPONSES:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/responsesTextView"
                android:singleLine="false"
                android:textColor="#aed21d"
                android:background="@android:color/black"
                android:textSize="20sp"
                android:lines="5"
                android:linksClickable="false"
                android:fontFamily="Courier"
                android:scrollbars="vertical"
                android:gravity="bottom" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
